<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Web Service">

        <com.retexspa.tecnologica.tlmoduloloyalty.TLEditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:key="WSURL"
            android:summary="a"
            android:title="Web service URL"
            android:defaultValue="http://10.86.2.166/TLFidelityWS"
            android:visibility="visible" />

        <com.retexspa.tecnologica.tlmoduloloyalty.TLEditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:key="WSURLCentralizzato"
            android:summary="a"
            android:title="Web service URL Centralizzato"
            android:defaultValue="http://tloyalty.crai.org/AppServer01/TLFidelityWS_Specialisti"
            android:visibility="visible" />

        <com.retexspa.tecnologica.tlmoduloloyalty.TLEditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="timeout"
            android:inputType="number"
            android:visibility="visible"
            android:summary="a"
            android:defaultValue="30"
            android:title="Timeout" />

    </PreferenceCategory>


</PreferenceScreen>
