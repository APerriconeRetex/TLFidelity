<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/nero"
        android:visibility="invisible"
        android:background="@android:color/black"
        android:clickable="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.retexspa.tecnologica.tlmoduloloyalty.firmaView
        android:id="@+id/firma1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <com.retexspa.tecnologica.tlmoduloloyalty.firmaView
        android:id="@+id/firma2"
        android:visibility="invisible"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:visibility="invisible"
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:layout_y="231dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="OK"
        app:srcCompat="@drawable/ok" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="152dp"
        android:layout_height="160dp"
        android:layout_x="275dp"
        android:layout_y="231dp"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:contentDescription="Cancella"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/delete2" />
</RelativeLayout>


